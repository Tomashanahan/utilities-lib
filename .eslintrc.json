{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    ".eslintrc.json",
    "vit.config.ts"
  ],
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "no-console": "error",
    "@typescript-eslint/no-explicit-any": "error"
  }
}
